<ul class='events list'>
  {{#each this}}
    <li class='events__item'>
      <div class='events__container'>
        <img
          class='events__image'
          src='https://javasea.ru/uploads/posts/2018-03/1520034043_vertikalnyy-vzglyad-kotika.jpg'
          alt=''
        />
      </div>
      <h2 class='events__title'>Event</h2>
      <p class='events__date'>Date</p>
      <p class='events__place'>
        <svg class='events__icon' width='20' height='20'>
          <use href='./images/sprite.svg#icon-location'></use>
        </svg>
        Place
      </p>
    </li>
  {{/each}}
</ul>
